<%= render 'public/header', member: @member %>

<div class="container">
  <div class="raw">
    <div class="col">
      <h3>注文履歴一覧</h3>
      <table>
        <thead>
          <tr>
            <th>注文日</th>
            <th>発送先</th>
            <th>注文商品</th>
            <th>支払い金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @order_detail.each do |order_detail| %>
          <tr>
            <td><% order_detail.created_at %></td>
            <td><% order_detail.order.adress %></td>
            <td><% order_detail.item.name %></td>
            <td><% order_detail.order.total_payment %></td>
            <td><% order_detail.order.payment_method %></td>
            <td><% link_to "詳細表示", public_order_path(order_detail) %></td>
            <td></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>