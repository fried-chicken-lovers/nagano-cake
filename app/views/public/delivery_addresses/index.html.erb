<%= render 'public/header', member: @member %>
<div>
<h1>配送先登録/一覧</h1>
<%= form_with model:@delivery_address, url:public_delivery_addresses_path, local:true do |f| %>

  <h4>郵便番号（ハイフンなし）</h4>
  <%= f.text_field :postal_code %>

  <h4>住所</h4>
  <%= f.text_area :residence %>

  <h4>宛名</h4>
  <%= f.text_field :name %>

  <%= f.submit '新規登録' %>

<% end %>
</div>

<div>
  <table>
    <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
     <% @delivery_addresses.each do |delivery_address| %>
      <tr>
        <td><%= delivery_address.postal_code %></td>
        <td><%= delivery_address.residence %></td>
        <td><%= delivery_address.name %></td>
        <td><%= link_to "編集する", edit_public_delivery_address_path(delivery_address) %></td>
        <td><%= link_to "削除する", public_delivery_address_path(delivery_address), method: :delete %></td>
      </tr>
     <% end %>
    </tbody>
  </table>
</div>
