<div>

 <div>
    <h2>ショッピングカート</h2>
    <table>
     <thead>
      <tr>
       <th>商品名</th>
       <th>単価（税込み）</th>
       <th>数量</th>
       <th>小計</th>
       <th></th>
      </tr>
     </thead>
     <%= total_cost = 0 %>
     <tbody>
         <% @cart_items.each do |cart_item| %>
         <tr>
          <td><%= cart_item.item.name %></td>
          <td><%= cart_item.item.with_tax_price%></td>
          <td><%= cart_item.quantity %></td>
          <td><%= cart_item.subtotal%></td>
          <% total_cost +=  cart_item.subtotal %>
          <td><%= link_to "削除する", public_cart_item_path(cart_item), method: :delete %></td>
         </tr>
         <% end %>
     </tbody>
    </table>
 </div>

 <div>
     <div><!--%= link_to "カートを空にする", public_cart_item_path(cart_item), method: :delete %--> </div>
     <div><%= link_to "買い物を続ける", public_items_path(@cart_item) %></div>
     <div><!--%= link_to "情報入力に進む", %--></div>
 </div>

</div>