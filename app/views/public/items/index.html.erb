<%= render 'public/header' %>
<h2>商品一覧（全<%= @items.count %>件）</h2>

<table class = "table">
    <% @items.each do |item| %>
    <tr>
      <th><%= attachment_image_tag item, :image, size: '60x60' %></th>
    </tr>
    <tr>
      <th><%= item.name %></th>
    </tr>
    <tr>
      <th><%= item.price %></th>
    </tr>
    <% end %>
</table>
