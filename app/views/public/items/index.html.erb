<%= render 'public/header', member: @member %>
<div class="container">
  <div class="raw">
    <div class="col">
    <h3>商品一覧（全<%= @items.count %>件）</h3>

    <table class = "table">
        <% @items.each do |item| %>
        <tr>
          <th>
            <%= link_to public_item_path(item.id) do %>
              <%= attachment_image_tag item, :image, size: '60x60' %>
            <% end %>
          </th>
        </tr>

        <tr>
          <th>
           <%= link_to public_item_path(item.id) do %>
            <%= item.name %>
           <% end %>
           </th>
        </tr>

        <tr>
          <th><%= item.price %></th>
        </tr>
        <% end %>
    </table>
    </div>
  </div>
</div>
