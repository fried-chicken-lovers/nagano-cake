<%= render 'public/header' %>
<h2>商品一覧（全<%= @items.count %>件）</h2>

<table class = "table">
    <% @items.each do |item| %>
    <tr>
      <th>
        <%= link_to public_item_path(item.id) do %>
          <%= attachment_image_tag item, :image, size: '60x60' %>
        <% end %>
      </th>
    </tr>

    <tr>
      <th>
       <%= link_to public_item_path(item.id) do %>
        <%= item.name %>
       <% end %>
       </th>
    </tr>

    <tr>
      <th><%= item.price %></th>
    </tr>
    <% end %>
</table>
