  <%= render 'public/header', member: current_member %>

  <div class = "container">
    <div class = "row">
      <div class = "col-md-4 text-light bg-dark">
        <h2>新規会員登録</h2>
      </div>
    </div>
  </div>

<!--%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %-->
<%= form_with model: @member, url: member_registration_path, local: true do |f| %>
  <%= render "publics/shared/error_messages", resource: resource %>

<table>
  <tr>
    <td>
      <div>名前</div>
    </td>
      <div class="field">
        <td><%= f.label :（姓） %></td>
        <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></td>
      </div>
      <div class="field">
        <td><%= f.label :（名） %></td>
        <td><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></td>
      </div>
  </tr>
  <tr>
    <td>
      <div>フリガナ</div>
    </td>
    <div class="field">
      <td><%= f.label :（セイ） %></td>
      <td><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %></td>
    </div>
    <div class="field">
      <td><%= f.label :（メイ） %></td>
      <td><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %></td>
    </div>
  </tr>
  <tr>
    <div class="field">
      <td><%= f.label :メールアドレス %></td>
      <td></td>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </div>
  </tr>
  <tr>
    <div class="field">
      <td><%= f.label :郵便番号（ハイフンなし） %></td>
      <td></td>
      <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal-code" %></td>
    </div>
  </tr>
  <tr>
    <div class="field">
      <td><%= f.label :住所 %></td>
      <td></td>
      <td><%= f.text_area :address, autofocus: true, autocomplete: "address" %></td>
    </div>
  </tr>
  <tr>
    <div class="field">
      <td><%= f.label :電話番号（ハイフンなし） %></td>
      <td></td>
      <td><%= f.text_field :telephone_namber, autofocus: true, autocomplete: "telephone_namber" %></td>
    </div>
  </tr>
  <tr>
    <div class="field">
      <td><%= f.label :パスワード %>
      <% if @minimum_password_length %>
      （<%= @minimum_password_length %> 文字以上）
      <% end %></td>
      <td></td>
      <td><%= f.password_field :password, autocomplete: "new-password" %></td>
    </div>
  </tr>
  <tr>
    <div class="field">
      <td><%= f.label :パスワード（確認用） %></td>
      <td></td>
      <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
    </div>
  </tr>
  <tr>
    <div class="actions">
      <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
    </div>
  </tr>
</table>
<% end %>

<table>
  <tr>
    <td>
      <div>既に登録済みの方</div>
      <%= link_to "こちらから", new_member_session_path %>
      <div>からログインして下さい</div>
    </td>
  </tr>
</table>