<h2>ジャンル一覧・追加</h2>

<%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
  <div class="form-group">
    <%= f.label :ジャンル名 %>
    <%= f.text_field :name, class: 'form-control genre_name' %>
  </div>
  <div class="form-group">
    <%= f.submit  class: 'btn btn-success' %>
  </div>
<% end %>

<table>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
        <tbody>
          <tr>
            <th>ジャンル</th>
          </tr>
            <% @genres.each do |genre| %>
          <tr>
          <td><%= genre.name %></td>
          <td><%= link_to '編集', edit_admin_genre_path(genre.id), method: :get %></td>
        </tr>
            <% end %>
    </tbody>
      </div>
    </div>
  </div>
</table>