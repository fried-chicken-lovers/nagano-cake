<%= render 'admin/header' %>
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-5'>

<h3>ジャンル一覧・追加</h3>

<%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
  <div class="form-group">
    <%= f.label :ジャンル名 %>
    <%= f.text_field :name, class: 'genre_name' %>
  </div>
  <div class="form-group">
    <%= f.submit '新規登録', class: 'btn btn-success' %>
  </div>
<% end %>

    </div>

    <table>
      <tbody>
        <tr>
          <th>ジャンル</th>
        </tr>
          <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to '編集', edit_admin_genre_path(genre.id), class: "btn btn-success", method: :get %></td>
        </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>
