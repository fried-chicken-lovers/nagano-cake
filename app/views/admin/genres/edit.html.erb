<h2>ジャンル編集</h2>

<%= form_with model: @genre, url: admin_genre_path, local:true do |f| %>
  <div class="form-group">
    <%= f.label :ジャンル名 %>
    <%= f.text_field :name, class: 'form-control genre_name' %>
  </div>
  <div class="form-group">
    <%= f.submit class:"btn btn-success" %>
  </div>
<% end %>