<%= render 'admin/header' %>
<div class="container">
  <div class="raw">
    <div class="col-md-12">
    <h3><%= @member.last_name %><%= @member.first_name %>さんの会員詳細</h3>

    <%= form_with model: @member, url: admin_member_path, local:true do |f| %>
      <table class="table">
        <tr>
        <th>会員ID</th>
        <td><%= @member.id %></td>
        </tr>
        <tr>
        <th>氏名</th>
        <td><%= f.text_field :last_name %> <%= f.text_field :first_name %></td>
        </tr>
        <tr>
        <th>フリガナ</th>
        <td><%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
        <th>郵便番号</th>
        <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
        <th>住所</th>
        <td><%= f.text_field :address %></td>
        </tr>
        <tr>
        <th>電話番号</th>
        <td><%= f.text_field :telephone_namber %></td>
        </tr><tr>
        <th>メールアドレス</th>
        <td><%= f.text_field :email %></td>
        </tr><tr>
        <th>会員ステータス</th>
        <td><%= f.collection_radio_buttons :is_deleted, Member.is_deleteds_i18n, :first , :last %></td>
        </tr>
        <td><%= f.submit "変更を保存", class: "btn btn-success" %></td>
      </table>
    <% end %>
    </div>
  </div>
</div>
