<%= render 'admin/header' %>
<div class="container">
  <div class="raw">
    <div class="col">
      <h3>会員一覧</h3>

      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @members.each do |member| %>
          <tr>
            <td>
              <%= member.id %>
            </td>
            <td>
              <%= link_to admin_member_path(member.id) do %>
              <%= member.last_name %><%= member.first_name %>
              <% end %>
            </td>
            <td><%= member.email %></td>
            <td><%= member.is_deleted_i18n %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <%= paginate @members %>
    </div>
  </div>
</div>