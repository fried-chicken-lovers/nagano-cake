<h1>商品新規登録</h1>
<table>
  <%= form_with model: @item, url: new_admin_item_path, local:true do |f| %>
  <tr>
  <th>商品画像</th>
  <td><%= f.attachment_field :image %></td>
  </tr>
  <tr>
  <th>商品名</th>
  <td><%= f.text_field :name %></td>
  </tr>
  <tr>
  <th>商品説明</th>
  <td><%= f.text_field :explanation %></td>
  </tr>
  <tr>
  <th>ジャンル</th>
  <td><%= f.collection_select :genre_id, Genre.all, :id, :name, :genres %></td>
  </tr>
  <tr>
  <th>税抜価格</th>
  <td><%= f.text_field :price %></td>
  </tr>
  <tr>
  <th>販売ステータス</th>
  <td><%= f.collection_radio_buttons :item, Item.is_deleted_i18n, :販売中 , :販売停止中 %></td>
  </tr>
  <td><%= f.submit %></td>
  <% end %>
</table>
