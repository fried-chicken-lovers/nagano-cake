<%= render 'admin/header' %>
<div class="container">
  <div class="raw">
    <div class="col-md-12">
    <h3>商品新規登録</h3>
    <%= form_with model: @item, url: admin_items_path, local:true do |f| %>
    <table>
      <tr>
      <th>商品画像</th>
      <td><%= f.attachment_field :image %></td>
      </tr>
      <tr>
      <th>商品名</th>
      <td><%= f.text_field :name %></td>
      </tr>
      <tr>
      <th>商品説明</th>
      <td><%= f.text_field :explanation %></td>
      </tr>
      <tr>
      <th>ジャンル</th>
      <td><%= f.collection_select :genre_id, Genre.all, :id, :name %></td>
      </tr>
      <tr>
      <th>税抜価格</th>
      <td><%= f.text_field :price %></td>
      </tr>
      <tr>
      <th>販売ステータス</th>
      <td><%= f.collection_radio_buttons :is_deleted, Item.is_deleteds_i18n, :first , :last %></td>
      </tr>
      <td><%= f.submit '新規登録', class: 'btn btn-success' %></td>
    </table>
    <% end %>
    </div>
  </div>
</div>
