<%= render 'admin/header' %>

<div class="container">
  <h3>商品編集</h3>

  <div class = 'row'>
    <div class="my-3 h3">
      <table>
        <%= form_with model: @item, url: admin_items_path, method: :get, local:true do |f| %>
        <tr>
        <th>商品画像</th>
        <td><%= f.attachment_field :image %></td>
        </tr>
        <tr>
        <th>商品名</th>
        <td><%= f.text_field :name %></td>
        </tr>
        <tr>
        <th>商品説明</th>
        <td><%= f.text_field :explanation %></td>
        </tr>
        <tr>
        <th>ジャンル</th>
        <td><%= f.collection_select :genre_id, Genre.all, :id, :name %></td>
        </tr>
        <tr>
        <th>税抜価格</th>
        <td><%= f.text_field :price %></td>
        </tr>
        <tr>
        <th>販売ステータス</th>
        <td><%= f.collection_radio_buttons :is_deleted, Item.is_deleteds_i18n, :first , :last %></td>
        </tr>
        <td><%= f.submit '編集を保存', class: 'btn btn-success' %></td>
        <% end %>
      </table>
    </div>
  </div>
</div>