<%= render 'admin/header' %>

<div class="container">
  <div class="raw">
    <div class="col">
      <h3>注文履歴一覧</h3>
      <table>
        <tr>
          <th>購入日時</th> <th>購入者</th> <th>注文個数</th> <th>注文ステータス</th>
        </tr>
        <tr>
          <% @orders.each do |order| %>
            <td><%= order.created_at %></td>
            <td><%= order.name %></td>
            <td><%= order.order_details.amount %></td>
            <td><%= order.status %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>